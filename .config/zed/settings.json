{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // Theme & Visual Settings
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "icon_theme": "Catppuccin Mocha",
  "font_family": "Fira Code Nerd Font",
  "ui_font_size": 14,
  "buffer_font_size": 14,
  // Line height options: "comfortable" (1.618), "standard" (1.3), or { "custom": 1.5 }
  "buffer_line_height": "comfortable",

  // Editor Behavior
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "vim_mode": false,
  "relative_line_numbers": false,
  "always_treat_brackets_as_autoclosed": false,

  // Panels Configuration
  "project_panel": {
    "dock": "left",
    "default_width": 225,
    "button": true,
    "git_status": true
  },
  "terminal": {
    "dock": "bottom",
    "button": false,
    "copy_on_select": true
  },
  "agent": {
    "dock": "right",
    "default_width": 300,
    "button": true,
    "auto_hide": false,
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-7-sonnet"
    },
    "version": "2"
  },
  "notification_panel": {
    "dock": "right",
    "default_width": 200
  },

  // Git Integration
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "position": "right"
    }
  },

  // Tab Settings
  "tabs": {
    "show_icons": true,
    "git_status": true,
    "close_position": "right"
  },

  // Preview Tabs Settings
  "preview_tabs": {
    "enabled": false
  },

  // Extension Settings
  // "auto_install_extensions": {}

  // Python Settings
  "language_overrides": {
    "Python": {
      "language_server": {
        "name": "pylsp",
        "initialization_options": {
          "pylsp": {
            "plugins": {
              "jedi": {
                "environment": "${workspaceFolder}/venv/bin/python"
              }
            }
          }
        }
      }
    }
  }
}
