[
  {
    "context": "Workspace",
    "use_key_equivalents": true,
    "bindings": {
      // Example: Override cmd+t to open terminal
      "cmd-t": "workspace::ToggleBottomDock",
      "cmd-shift-t": "workspace::NewTerminal",
      "cmd-e": "project_panel::ToggleFocus",
      "cmd-g": "git_panel::ToggleFocus",
      "cmd-shift-o": ["projects::OpenRecent", { "create_new_window": true }]
    }
  },
  {
    "context": "Editor && mode == full",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-e": "project_panel::ToggleFocus",
      "cmd-g": "git_panel::ToggleFocus",
      "cmd-shift-o": "projects::OpenRecent"
    }
  },
  {
    "context": "Editor",
    "use_key_equivalents": true,
    "bindings": {
      // Example: Add your own motion, edit, or cursor stuff here
      "cmd-d": "editor::SelectNext"
    }
  },
  {
    "context": "Terminal",
    "use_key_equivalents": true,
    "bindings": {
      // Example: Clear terminal
      "cmd-k": "terminal::Clear"
    }
  },
  {
    "context": "Pane",
    "use_key_equivalents": true,
    "bindings": {
      // Example: switch between open tabs
      "cmd-1": ["workspace::ActivatePane", 0]
    }
  },
  {
    "context": "ProjectPanel",
    "use_key_equivalents": true,
    "bindings": {
      // Example: create new file or folder
      "cmd-n": "project_panel::NewFile"
    }
  }
]
