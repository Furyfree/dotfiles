#############################################
# SPACE MANAGEMENT
#############################################

# Focus spaces 1–9 on active display (lalt)
lalt - 1 : yabai -m space --focus 1
lalt - 2 : yabai -m space --focus 2
lalt - 3 : yabai -m space --focus 3
lalt - 4 : yabai -m space --focus 4
lalt - 5 : yabai -m space --focus 5
lalt - 6 : yabai -m space --focus 6
lalt - 7 : yabai -m space --focus 7
lalt - 8 : yabai -m space --focus 8
lalt - 9 : yabai -m space --focus 9

# Move window to space 1–9 and follow it (shift + lalt)
shift + lalt - 1 : yabai -m window --space 1 && yabai -m space --focus 1
shift + lalt - 2 : yabai -m window --space 2 && yabai -m space --focus 2
shift + lalt - 3 : yabai -m window --space 3 && yabai -m space --focus 3
shift + lalt - 4 : yabai -m window --space 4 && yabai -m space --focus 4
shift + lalt - 5 : yabai -m window --space 5 && yabai -m space --focus 5
shift + lalt - 6 : yabai -m window --space 6 && yabai -m space --focus 6
shift + lalt - 7 : yabai -m window --space 7 && yabai -m space --focus 7
shift + lalt - 8 : yabai -m window --space 8 && yabai -m space --focus 8
shift + lalt - 9 : yabai -m window --space 9 && yabai -m space --focus 9

#############################################
# WINDOW FOCUS & MOVEMENT
#############################################

# Vim-style navigation (hyper)
hyper - h : yabai -m window --focus west
hyper - j : yabai -m window --focus south
hyper - k : yabai -m window --focus north
hyper - l : yabai -m window --focus east

# Arrow key navigation (hyper)
hyper - left  : yabai -m window --focus west
hyper - down  : yabai -m window --focus south
hyper - up    : yabai -m window --focus north
hyper - right : yabai -m window --focus east

# Focus last used window
hyper - tab : yabai -m window --focus recent

# Move window (lctrl + arrow)
lctrl - left  : yabai -m window --warp west
lctrl - down  : yabai -m window --warp south
lctrl - up    : yabai -m window --warp north
lctrl - right : yabai -m window --warp east

#############################################
# WINDOW STATE
#############################################

# Toggle float (centered 2x2 in 4x4 grid)
hyper - v : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Center window (4x4 in 6x6 grid)
hyper - c : yabai -m window --grid 6:6:1:1:4:4

# Maximize window
hyper - m : yabai -m window --toggle zoom-fullscreen

# Toggle split horizontal/vertical
hyper - s : yabai -m window --toggle split

#############################################
# APP LAUNCHING
#############################################

rcmd - z      : open -na "Zed"
rcmd - b      : open -na "Zen"
rcmd - p      : open -na "1Password"
rcmd - f      : open -na "Finder" && osascript -e 'tell application "Finder" to activate' -e 'tell application "System Events" to keystroke "n" using command down'
rcmd - c      : open -na "ChatGPT"
rcmd - e      : open -na "Proton Mail"
hyper - return: open -na "Ghostty"

#############################################
# CONFIG RELOAD
#############################################

hyper - r : skhd --restart-service
hyper - y : yabai --restart-service
