font-family = "JetBrainsMono Nerd Font"
font-size = 11.0

background-opacity = 0.8
background-blur = true

window-padding-x = 10
window-padding-y = 8

window-decoration = "auto"
gtk-titlebar-hide-when-maximized = true
term = xterm-256color

theme = "catppuccin-mocha"

confirm-close-surface = false

############
# Keybinds #
############
# Allow closing the current tab (with all splits) via Ctrl+Shift+W
keybind = "ctrl+shift+w=close_tab"

# Scroll the scrollback with Shift + PgUp/PgDn
keybind = shift+page_up=scroll_page_up
keybind = shift+page_down=scroll_page_down
# Send ESC + CR sequence for multi-line editing or shell compatibility
keybind = shift+enter=text:\x1b\r
