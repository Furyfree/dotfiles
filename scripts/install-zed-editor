#!/bin/bash

# install-zed-editor: Install Zed code editor
# Usage: ./install-zed-editor

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
WHITE='\033[1;37m'
NC='\033[0m' # No Color

print_step() {
    echo -e "${BLUE}[STEP]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

echo -e "${BLUE}═══════════════════════════════════════${NC}"
echo -e "${WHITE}  📝 Zed Editor Installation${NC}"
echo -e "${BLUE}═══════════════════════════════════════${NC}"

# Check if Zed is already installed
if command -v zed &>/dev/null; then
    print_success "Zed is already installed"
    zed --version
    exit 0
fi

# Download and install Zed
print_step "Downloading and installing Zed..."

# Create temporary directory
TEMP_DIR=$(mktemp -d)
cd "$TEMP_DIR"

# Download the installation script
if curl -f https://zed.dev/install.sh > install.sh; then
    print_success "Downloaded Zed installation script"
else
    print_error "Failed to download Zed installation script"
    rm -rf "$TEMP_DIR"
    exit 1
fi

# Make script executable and run it
chmod +x install.sh
if sh install.sh; then
    print_success "Zed installed successfully"
else
    print_error "Failed to install Zed"
    rm -rf "$TEMP_DIR"
    exit 1
fi

# Clean up
cd "$HOME"
rm -rf "$TEMP_DIR"

# Verify installation
if command -v zed &>/dev/null; then
    print_success "Zed installation verified"
    echo -e "${WHITE}Zed version:${NC}"
    zed --version
    echo -e "${WHITE}Zed installed to:${NC} $(which zed)"
else
    print_error "Zed installation verification failed"
    exit 1
fi

print_success "Zed editor installation completed!"
echo -e "${WHITE}You can now run 'zed' from the command line or find it in your applications menu.${NC}"
