#!/bin/bash

# setup-pacman: Configure pacman.conf settings
# Usage: ./setup-pacman

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
WHITE='\033[1;37m'
NC='\033[0m' # No Color

print_step() {
    echo -e "${BLUE}[STEP]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

echo -e "${BLUE}═══════════════════════════════════════${NC}"
echo -e "${WHITE}  📦 Pacman Configuration Setup${NC}"
echo -e "${BLUE}═══════════════════════════════════════${NC}"

PACMAN_CONF="/etc/pacman.conf"

# Check if pacman.conf exists
if [[ ! -f "$PACMAN_CONF" ]]; then
    print_error "pacman.conf not found at $PACMAN_CONF"
    exit 1
fi

# Backup original pacman.conf
print_step "Creating backup of pacman.conf..."
if [[ ! -f "$PACMAN_CONF.backup" ]]; then
    sudo cp "$PACMAN_CONF" "$PACMAN_CONF.backup"
    print_success "Backup created at $PACMAN_CONF.backup"
else
    print_warning "Backup already exists at $PACMAN_CONF.backup"
fi

# Enable Color option
print_step "Enabling Color option..."
if grep -q "^Color" "$PACMAN_CONF"; then
    print_success "Color already enabled"
elif grep -q "^#Color" "$PACMAN_CONF"; then
    sudo sed -i 's/^#Color/Color/' "$PACMAN_CONF"
    print_success "Color enabled"
else
    # Add Color under [options] section
    sudo sed -i '/^\[options\]/a Color' "$PACMAN_CONF"
    print_success "Color option added"
fi

# Enable multilib repository
print_step "Enabling multilib repository..."
if grep -q "^\[multilib\]" "$PACMAN_CONF"; then
    print_success "multilib repository already enabled"
elif grep -q "^#\[multilib\]" "$PACMAN_CONF"; then
    # Uncomment [multilib] line
    sudo sed -i 's/^#\[multilib\]/[multilib]/' "$PACMAN_CONF"
    # Uncomment the Include line that follows multilib
    sudo sed -i '/^\[multilib\]/,/^Include.*multilib/ { /^#Include.*multilib/ s/^#// }' "$PACMAN_CONF"
    print_success "multilib repository enabled"
else
    # Add multilib section at the end
    print_step "Adding multilib repository section..."
    sudo tee -a "$PACMAN_CONF" >/dev/null <<'EOF'

[multilib]
Include = /etc/pacman.d/mirrorlist
EOF
    print_success "multilib repository added"
fi

# Enable VerbosePkgLists for better package information
print_step "Enabling VerbosePkgLists..."
if grep -q "^VerbosePkgLists" "$PACMAN_CONF"; then
    print_success "VerbosePkgLists already enabled"
elif grep -q "^#VerbosePkgLists" "$PACMAN_CONF"; then
    sudo sed -i 's/^#VerbosePkgLists/VerbosePkgLists/' "$PACMAN_CONF"
    print_success "VerbosePkgLists enabled"
else
    # Add VerbosePkgLists under [options] section
    sudo sed -i '/^\[options\]/a VerbosePkgLists' "$PACMAN_CONF"
    print_success "VerbosePkgLists option added"
fi

# Enable ParallelDownloads for faster downloads
print_step "Enabling ParallelDownloads..."
if grep -q "^ParallelDownloads" "$PACMAN_CONF"; then
    print_success "ParallelDownloads already enabled"
elif grep -q "^#ParallelDownloads" "$PACMAN_CONF"; then
    sudo sed -i 's/^#ParallelDownloads = 5/ParallelDownloads = 5/' "$PACMAN_CONF"
    print_success "ParallelDownloads enabled (5 concurrent downloads)"
else
    # Add ParallelDownloads under [options] section
    sudo sed -i '/^\[options\]/a ParallelDownloads = 5' "$PACMAN_CONF"
    print_success "ParallelDownloads option added (5 concurrent downloads)"
fi

# Update package database to include multilib packages
print_step "Updating package database..."
if sudo pacman -Sy; then
    print_success "Package database updated"
else
    print_warning "Failed to update package database"
fi

print_success "Pacman configuration completed!"
echo -e "${WHITE}Enabled features:${NC}"
echo -e "  • ${GREEN}Color${NC} - Colorized output"
echo -e "  • ${GREEN}multilib${NC} - 32-bit compatibility packages"
echo -e "  • ${GREEN}VerbosePkgLists${NC} - Detailed package information"
echo -e "  • ${GREEN}ParallelDownloads${NC} - Faster package downloads"
echo -e "${WHITE}Backup saved at: $PACMAN_CONF.backup${NC}"
