#!/bin/bash

# setup-xdg-dirs: Setup XDG user directories
# Usage: ./setup-xdg-dirs

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
WHITE='\033[1;37m'
NC='\033[0m' # No Color

print_step() {
    echo -e "${BLUE}[STEP]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

echo -e "${BLUE}═══════════════════════════════════════${NC}"
echo -e "${WHITE}  📁 XDG User Directories Setup${NC}"
echo -e "${BLUE}═══════════════════════════════════════${NC}"

# Install xdg-user-dirs if not present
if ! command -v xdg-user-dirs-update &>/dev/null; then
    print_step "Installing xdg-user-dirs..."
    if command -v pacman &>/dev/null; then
        sudo pacman -S --needed --noconfirm xdg-user-dirs
    elif command -v paru &>/dev/null; then
        paru -S --needed --noconfirm xdg-user-dirs
    else
        print_error "No package manager found"
        exit 1
    fi
    print_success "xdg-user-dirs installed"
fi

# Create XDG user directories
print_step "Creating XDG user directories..."
xdg-user-dirs-update

# Check if directories were created
print_step "Verifying XDG directories..."
if [[ -f "$HOME/.config/user-dirs.dirs" ]]; then
    print_success "XDG user directories configuration created"

    # Source the configuration to get directory paths
    source "$HOME/.config/user-dirs.dirs"

    # List created directories
    echo -e "${WHITE}Created directories:${NC}"
    echo -e "  • ${GREEN}Desktop:${NC} $XDG_DESKTOP_DIR"
    echo -e "  • ${GREEN}Downloads:${NC} $XDG_DOWNLOAD_DIR"
    echo -e "  • ${GREEN}Templates:${NC} $XDG_TEMPLATES_DIR"
    echo -e "  • ${GREEN}Public:${NC} $XDG_PUBLICSHARE_DIR"
    echo -e "  • ${GREEN}Documents:${NC} $XDG_DOCUMENTS_DIR"
    echo -e "  • ${GREEN}Music:${NC} $XDG_MUSIC_DIR"
    echo -e "  • ${GREEN}Pictures:${NC} $XDG_PICTURES_DIR"
    echo -e "  • ${GREEN}Videos:${NC} $XDG_VIDEOS_DIR"

    # Create additional useful directories
    print_step "Creating additional directories..."
    mkdir -p "$HOME/Screenshots"
    mkdir -p "$HOME/Wallpapers"
    mkdir -p "$HOME/.local/bin"
    mkdir -p "$HOME/.local/share/applications"
    mkdir -p "$HOME/.config"

    print_success "Additional directories created"

else
    print_error "Failed to create XDG user directories configuration"
    exit 1
fi

# Update desktop database
if command -v update-desktop-database &>/dev/null; then
    print_step "Updating desktop database..."
    update-desktop-database "$HOME/.local/share/applications" 2>/dev/null || true
    print_success "Desktop database updated"
fi

print_success "XDG user directories setup completed!"
echo -e "${WHITE}Standard user directories are now configured and available.${NC}"
