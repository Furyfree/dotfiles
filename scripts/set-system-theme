#!/bin/bash

# set-system-theme: Set GTK and system themes to Catppuccin Mocha
# Usage: set-system-theme

echo "Setting Catppuccin Mocha system theme..."

# Set GTK theme to dark mode
if command -v gsettings &>/dev/null; then
    gsettings set org.gnome.desktop.interface color-scheme "prefer-dark"
    gsettings set org.gnome.desktop.interface gtk-theme "Adwaita-dark"
    gsettings set org.gnome.desktop.interface icon-theme "Papirus-Dark"
    gsettings set org.gnome.desktop.interface cursor-theme "Bibata-Modern-Classic"
    echo "Updated GTK settings"
fi

# Set browser theme to dark
if command -v google-chrome &>/dev/null; then
    google-chrome --no-startup-window --set-color-scheme="dark" &>/dev/null &
    echo "Updated Chrome theme"
fi

# Set browser theme for Zen Browser
if command -v zen-browser &>/dev/null; then
    zen-browser --no-startup-window --set-color-scheme="dark" &>/dev/null &
    echo "Updated Zen Browser theme"
fi

echo "Catppuccin Mocha system theme applied successfully!"
