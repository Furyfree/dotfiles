[
  {
    "context": "Workspace",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-t": "workspace::ToggleBottomDock",
      "ctrl-t": "workspace::ToggleBottomDock",
      "cmd-shift-t": "workspace::NewTerminal",
      "ctrl-shift-t": "workspace::NewTerminal",
      "cmd-e": "project_panel::ToggleFocus",
      "ctrl-e": "project_panel::ToggleFocus",
      "cmd-g": "git_panel::ToggleFocus",
      "ctrl-g": "git_panel::ToggleFocus",
      "cmd-j": "workspace::ToggleRightDock",
      "ctrl-j": "workspace::ToggleRightDock",
      "cmd-shift-o": ["projects::OpenRecent", { "create_new_window": true }],
      "ctrl-shift-o": ["projects::OpenRecent", { "create_new_window": true }]
    }
  },
  {
    "context": "Editor && mode == full",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-e": "project_panel::ToggleFocus",
      "ctrl-e": "project_panel::ToggleFocus",
      "cmd-g": "git_panel::ToggleFocus",
      "ctrl-g": "git_panel::ToggleFocus",
      "cmd-shift-o": "projects::OpenRecent",
      "ctrl-shift-o": "projects::OpenRecent"
    }
  },
  {
    "context": "Editor",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-d": "editor::SelectNext",
      "ctrl-d": "editor::SelectNext"
    }
  },
  {
    "context": "Terminal",
    "use_key_equivalents": true,
    "bindings": {
      // Example: Clear terminal
      "cmd-k": "terminal::Clear",
      "ctrl-k": "terminal::Clear"
    }
  },
  {
    "context": "Pane",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-1": ["workspace::ActivatePane", 0],
      "ctrl-1": ["workspace::ActivatePane", 0]
    }
  },
  {
    "context": "ProjectPanel",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-n": "project_panel::NewFile",
      "ctrl-n": "project_panel::NewFile"
    }
  }
]
