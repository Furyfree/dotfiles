{
  "edit_predictions": {
    "disabled_globs": ["**/*"],
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // Disable inline AI completions
  "copilot": {
    "enable_completions": false
  },

  // Theme & Visual Settings
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "icon_theme": "Catppuccin Mocha",
  "font_family": [
    "FiraCode Nerd Font",
    "JetBrainsMono Nerd Font",
    "Apple Color Emoji",
    "Segoe UI Emoji",
    "Noto Color Emoji",
    "Font Awesome 6 Free",
    "Font Awesome 6 Brands",
    "Font Awesome 7 Free",
    "Font Awesome 7 Brands"
  ],
  "ui_font_size": 14,
  "buffer_font_size": 14,
  // Line height options: "comfortable" (1.618), "standard" (1.3), or { "custom": 1.5 }
  "buffer_line_height": "comfortable",

  // Editor Behavior
  "format_on_save": "off",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "vim_mode": false,
  "relative_line_numbers": false,
  "always_treat_brackets_as_autoclosed": false,

  // Panels Configuration
  "project_panel": {
    "dock": "left",
    "default_width": 225,
    "button": true,
    "git_status": true
  },
  "terminal": {
    "font_family": "FiraCode Nerd Font Mono",
    "dock": "bottom",
    "button": true,
    "copy_on_select": true
  },
  "agent": {
    "default_profile": "ask",
    "dock": "right",
    "default_width": 300,
    "button": true,
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    }
  },
  "notification_panel": {
    "dock": "right",
    "default_width": 200
  },

  // Git Integration
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "position": "right"
    }
  },

  // Tab Settings
  "tabs": {
    "show_icons": true,
    "git_status": true,
    "close_position": "right"
  },

  // Preview Tabs Settings
  "preview_tabs": {
    "enabled": false
  },

  // Session Settings
  // "restore_on_startup": "last_session",
  // "restore_on_startup": "none",

  // Folder opening behavior - "window" will open folders in new windows
  "folder_opener": "window",

  // Extension Settings
  // "auto_install_extensions": {}

  // LSP Settings
  "lsp": {
    "jdtls": {
      "initialization_options": {
        "settings": {
          "java": {
            "import": {
              "maven": {
                "enabled": true
              },
              "gradle": {
                "enabled": false
              }
            }
          }
        }
      }
    },
    "java": {
      "initialization_options": {
        "settings": {
          "java.import.maven.enabled": true,
          "java.import.gradle.enabled": false
        }
      }
    }
  },

  // Python Settings
  "language_overrides": {
    "JSON": {
      "format_on_save": "off"
    },
    "JavaScript": {
      "format_on_save": "off"
    },
    "TypeScript": {
      "format_on_save": "off"
    },
    "Python": {
      "format_on_save": "off",
      "language_server": {
        "name": "pylsp",
        "initialization_options": {
          "pylsp": {
            "plugins": {
              "rope": {
                "enabled": false
              },
              "jedi": {
                "environment": "${workspaceFolder}/venv/bin/python"
              }
            }
          }
        }
      }
    }
  }
}
