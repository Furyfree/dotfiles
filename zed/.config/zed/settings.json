// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "show_whitespaces": "trailing",
  "jsx_tag_auto_close": {
    "enabled": true
  },
  "always_treat_brackets_as_autoclosed": false,
  "use_auto_surround": true,
  "use_autoclose": true,
  "format_on_save": "on",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "use_on_type_format": false,
  "indent_guides": {
    "background_coloring": "indent_aware",
    "coloring": "fixed",
    "active_line_width": 2,
    "line_width": 1,
    "enabled": true
  },
  "soft_wrap": "none",
  "preferred_line_length": 100,
  "toolbar": {
    "agent_review": false,
    "selections_menu": false,
    "quick_actions": false,
    "breadcrumbs": true
  },
  "scrollbar": {
    "axes": {
      "vertical": true,
      "horizontal": true
    },
    "diagnostics": "warning",
    "show": "auto"
  },
  "inline_code_actions": false,
  "gutter": {
    "min_line_number_digits": 2,
    "folds": false,
    "runnables": false
  },
  "relative_line_numbers": "enabled",
  "drag_and_drop_selection": {
    "delay": 200
  },
  "hover_popover_delay": 200,
  "auto_signature_help": true,
  "fast_scroll_sensitivity": 3.0,
  "scroll_sensitivity": 1.0,
  "horizontal_scroll_margin": 2.0,
  "vertical_scroll_margin": 2.0,
  "outline_panel": {
    "expand_outlines_with_depth": 50
  },
  "excerpt_context_lines": 1,
  "expand_excerpt_lines": 3,
  "autosave": "off",
  "show_wrap_guides": false,
  "minimum_contrast_for_highlights": 40.0,
  "rounded_selection": false,
  "current_line_highlight": "line",
  "unnecessary_code_fade": 0.0,
  "hide_mouse": "never",
  "cursor_shape": "block",
  "cursor_blink": false,
  "agent_buffer_font_size": 14.0,
  "ui_font_weight": 400.0,
  "ui_font_family": ".ZedSans",
  "buffer_font_weight": 400.0,
  "buffer_font_family": ".ZedMono",
  "buffer_font_features": {
    "liga": false,
    "calt": false
  },
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Frappé",
    "dark": "Catppuccin Mocha"
  },
  "on_last_window_closed": "quit_app",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "base_keymap": "JetBrains",
  "ui_font_size": 13.0,
  "buffer_font_size": 13.0,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Frappé - No Italics",
    "dark": "Catppuccin Mocha - No Italics"
  }
}
