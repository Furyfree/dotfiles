# Application bindings
$terminal = uwsm app -- ghostty
$browser = omarchy-launch-browser

bindd = SUPER, RETURN, Terminal, exec, $terminal --working-directory=$(omarchy-cmd-terminal-cwd)
bindd = SUPER SHIFT, F, File manager, exec, uwsm app -- nautilus --new-window
bindd = SUPER SHIFT, B, Browser, exec, $browser
bindd = SUPER SHIFT ALT, B, Browser (private), exec, $browser --private
bindd = SUPER SHIFT, S, Music, exec, uwsm app -- spotify
bindd = SUPER SHIFT, N, Editor, exec, omarchy-launch-editor
bindd = SUPER SHIFT, T, Activity, exec, $terminal -e btop
bindd = SUPER SHIFT, D, Docker, exec, $terminal -e lazydocker
bindd = SUPER SHIFT, G, Signal, exec, omarchy-launch-or-focus signal "uwsm app -- signal-desktop"
bindd = SUPER SHIFT, O, Obsidian, exec, omarchy-launch-or-focus obsidian "uwsm app -- obsidian -disable-gpu --enable-wayland-ime"

# If your web app url contains #, type it as ## to prevent hyperland treat it as comments
bindd = SUPER SHIFT, C, ChatGPT, exec, omarchy-launch-webapp "https://chatgpt.com"
bindd = SUPER SHIFT ALT, T, Todoist, exec, omarchy-launch-webapp "https://app.todoist.com"
bindd = SUPER SHIFT ALT, G, Todoist, exec, omarchy-launch-webapp "https://github.com"
bindd = SUPER SHIFT, M, ChatGPT, exec, omarchy-launch-webapp "https://www.messenger.com"
bindd = SUPER SHIFT ALT, A, Grok, exec, omarchy-launch-webapp "https://grok.com"
bindd = SUPER SHIFT, Y, YouTube, exec, omarchy-launch-webapp "https://youtube.com/"
bindd = SUPER SHIFT, X, X / Twitter, exec, omarchy-launch-webapp "https://x.com/"

# Overwrite existing bindings, like putting Omarchy Menu on Super + Space
# unbind = SUPER SHIFT, SPACE
# bindd = SUPER SHIFT, SPACE, Omarchy menu, exec, omarchy-menu

#################################
# OWN BINDINGS
#################################

# Kill Active Window
unbind = SUPER SHIFT, W
unbind = SUPER SHIFT, Q
bindd = SUPER SHIFT, Q, Close active window, killactive,

# Lock Screen
unbind = SUPER SHIFT, L
bind = SUPER SHIFT, L, exec, hyprlock

# wlogout
unbind = SUPER SHIFT ALT, L
bind = SUPER SHIFT ALT, L, exec, wlogout

# 1password
unbind = CTRL_SHIFT, SPACE
bind = CTRL_SHIFT, SPACE, exec, 1password --quick-access


# Screenshot
unbind = SUPER SHIFT ALT, S
bindd = SUPER SHIFT ALT, S, Screenshot of region, exec, omarchy-cmd-screenshot

# Zed
$zed = /home/pby/.local/bin/zed
unbind = SUPER SHIFT, Z
bind = SUPER SHIFT, Z, exec, $zed

unbind = SUPER SHIFT, V
bind = SUPER SHIFT, V, exec, code

unbind = SUPER SHIFT, W
bindd = SUPER SHIFT, W, Toggle floating, togglefloating,

# bind = SUPER SHIFT, Y, exec, $pycharm


# 1password
unbind = SUPER SHIFT, P
bind = SUPER SHIFT, P, exec, 1password

# Chess.com
unbind = SUPER SHIFT ALT, C
bindd = SUPER SHIFT ALT, C, Chess.com, exec, omarchy-launch-webapp "https://www.chess.com/"

# Proton
unbind = SUPER SHIFT, A
bindd = SUPER SHIFT, A, Proton Apps, exec, omarchy-launch-webapp "https://account.proton.me/apps"
unbind = SUPER SHIFT, E
bindd = SUPER SHIFT, E, Email, exec, omarchy-launch-webapp "https://mail.proton.me/"

unbind = SUPER SHIFT ALT, S
# unbind = , Print
# unbind = , PRINT
bind = SUPER SHIFT ALT, S, exec, hyprshot -m region -o ~/Pictures/Screenshots -f "screenshot-$(date +%Y%m%d-%H%M%S).png"
# bind = , Print, exec, hyprshot -m region -o ~/Pictures/Screenshots -f "screenshot-$(date +%Y%m%d-%H%M%S).png"

# Copilot button (Elitebook)
bind = SUPER_SHIFT, code:201, exec, omarchy-launch-webapp "https://chatgpt.com"

# Rider
$rider = /home/pby/.local/share/JetBrains/Toolbox/scripts/rider
unbind = SUPER SHIFT, R
bind = SUPER SHIFT, R, exec, $rider

# IntelliJ
$intelliJ = /home/pby/.local/share/JetBrains/Toolbox/scripts/idea
unbind = SUPER SHIFT, I
bind = SUPER SHIFT, I, exec, $intelliJ

$pycharm = /home/pby/.local/share/JetBrains/Toolbox/scripts/pycharm
unbind = SUPER SHIFT ALT, P
bind = SUPER SHIFT ALT, P, exec, $pycharm

unbind = SUPER SHIFT, N
bind = SUPER SHIFT, N, exec, standard-notes

# Walker memory leak workaround
# unbind = SUPER SHIFT, SPACE
# bindd = SUPER SHIFT, SPACE, Launch apps, exec, pkill walker; walker -p "Startâ€¦"


# Resize active window
unbind = SUPER SHIFT, code:20
unbind = SUPER SHIFT, code:21
unbind = SUPER SHIFT ALT, code:20
unbind = SUPER SHIFT ALT, code:21

bindd = SUPER SHIFT, plus, Expand window left, resizeactive, -100 0    # + key
bindd = SUPER SHIFT, minus, Shrink window left, resizeactive, 100 0     # - key
bindd = SUPER SHIFT ALT, plus, Shrink window up, resizeactive, 0 -100
bindd = SUPER SHIFT ALT, minus, Expand window down, resizeactive, 0 100
