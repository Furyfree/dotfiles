{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "type": "builtin",
    "source": "arch",
    "color": { "1": "#04a5e5", "2": "#7287fd" },
    "padding": { "top": 2, "left": 2, "right": 2 },
  },
  "display": {
    "separator": " \u001b[38;2;4;165;229m❯\u001b[0m ",
    "constants": ["\u001b[38;2;32;159;181m─────────────────\u001b[0m"],
    "key": {
      "type": "both", // <— show icon + text (use "string" for text-only)
      // "width": 0, // <— align key column (tweak to taste)
      "paddingLeft": 0,
    },
  },
  "modules": [
    {
      "type": "command",
      "key": " ",
      "text": "printf '\\033[38;2;4;165;229m%s@%s\\033[0m\\n' \" $USER\" \"$(hostname)\"",
    },
    {
      "type": "custom",
      "format": "\u001b[38;2;32;159;181m┌\u001b[0m{$1} \u001b[38;2;4;165;229mHardware Information\u001b[0m {$1}\u001b[38;2;32;159;181m┐\u001b[0m",
    },
    { "type": "cpu", "keyColor": "#04a5e5" },
    { "type": "gpu", "keyColor": "#04a5e5" },
    { "type": "disk", "keyColor": "#04a5e5" },
    { "type": "memory", "keyColor": "#04a5e5" },
    { "type": "display", "keyColor": "#04a5e5" },
    {
      "type": "custom",
      "format": "\u001b[38;2;32;159;181m└\u001b[0m{$1}\u001b[38;2;32;159;181m──────────────────────\u001b[0m{$1}\u001b[38;2;32;159;181m┘\u001b[0m",
    },
    { "type": "custom", "format": "" },

    {
      "type": "custom",
      "format": "\u001b[38;2;32;159;181m┌\u001b[0m{$1} \u001b[38;2;4;165;229mSoftware Information\u001b[0m {$1}\u001b[38;2;32;159;181m┐\u001b[0m",
    },
    { "type": "os", "keyColor": "#04a5e5" },
    { "type": "kernel", "keyColor": "#04a5e5" },
    {
      "type": "command",
      "key": " ",
      "text": "printf '\\033[38;2;4;165;229m OS Age\\033[0m \\033[38;2;4;165;229m❯\\033[0m \\033[38;2;114;135;253m%s\\033[0m\\n' \"$(( ( $(date +%s) - $(stat -c %W /) ) / 86400 )) days\"",
    },
    { "type": "lm", "keyColor": "#04a5e5" },
    { "type": "de", "keyColor": "#04a5e5" },
    { "type": "wm", "keyColor": "#04a5e5" },
    { "type": "shell", "keyColor": "#04a5e5" },
    { "type": "terminal", "keyColor": "#04a5e5" },
    { "type": "font", "keyColor": "#04a5e5" },
    { "type": "theme", "keyColor": "#04a5e5" },
    { "type": "icons", "keyColor": "#04a5e5" },
    { "type": "packages", "keyColor": "#04a5e5" },
    { "type": "locale", "keyColor": "#04a5e5" },
    {
      "type": "custom",
      "format": "\u001b[38;2;32;159;181m└\u001b[0m{$1}\u001b[38;2;32;159;181m──────────────────────\u001b[0m{$1}\u001b[38;2;32;159;181m┘\u001b[0m",
    },

    { "type": "colors", "symbol": "circle", "paddingLeft": 21 },
  ],
}
